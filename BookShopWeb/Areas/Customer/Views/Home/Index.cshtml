@model IEnumerable<BookShop.Models.Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-ld-3 col-md-6">
            <div class="row pt-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <img src="@product.ImageURL" class="card-img-top rounded" />
                        <div class="card-body">
                            <div class="pl-1">
                                <div>
                                    <p class="card-title h5 text-primary">@product.Title</p>
                                    <p class="card-title text-info">@product.Author</p>
                                </div>
                            </div>
                            <div class="pl-1">
                                <div>
                                    <p>List Price: <strike>by <b>$@product.ListPrice.ToString("0.00")</b></strike> </p>
                                </div>
                            </div>
                            <div class="pl-1">
                                <div>
                                    <p>As low as: <b>$@product.Price100.ToString("0.00")</b> </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-controll col-12" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
