@model BookShop.Models.ViewModels.ProductVM

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <input asp-for="Product.ImageURL" hidden />
    
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row">
        <div class="col-12 pb-2">
            <h2 class="text-primary">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Product.Title">Title</label>
            <input asp-for="Product.Title" class="form-control" />
            <span asp-validation-for="Product.Title" class="test-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Description">Description</label>
            <textarea asp-for="Product.Description" rows="4" class="form-control"></textarea>
            <span asp-validation-for="Product.Description" class="test-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.ISBN">ISBN</label>
            <input asp-for="Product.ISBN" class="form-control" />
            <span asp-validation-for="Product.ISBN" class="test-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.Author">Author</label>
            <input asp-for="Product.Author" class="form-control" />
            <span asp-validation-for="Product.Author" class="test-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.ListPrice">ListPrice</label>
            <input asp-for="Product.ListPrice" class="form-control" />
            <span asp-validation-for="Product.ListPrice" class="test-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.Price">Price</label>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price" class="test-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.Price50">Price50</label>
            <input asp-for="Product.Price50" class="form-control" />
            <span asp-validation-for="Product.Price50" class="test-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.Price100">Price100</label>
            <input asp-for="Product.Price100" class="form-control" />
            <span asp-validation-for="Product.Price100" class="test-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ImageURL">Image</label>
            <input type="file" name="file" id="uploadBox" class="form-control" />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.CategoryId">CategoryId</label>
            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="test-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.CoverTypeId">CoverTypeId</label>
            <select asp-for="Product.CoverTypeId" asp-items="@Model.CoverTypeList" class="form-select">
                <option disabled selected>--Select Cover Type--</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="test-danger"></span>
        </div>
        <div class="col-12">
            @if(Model.Product.Id != 0)
            {
                <button type="submit" class="btn btn-primary" width="150px">Update</button>
            } else
            {
                <button type="submit" onclick="return ValidateInput()" class="btn btn-primary" width="150px">Create</button>
                
            }
            
            <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>

    </div>
        </div>
        <div class="col-2 pt-4">
            <img src="@Model.Product.ImageURL" width="100%" style="border-radius:5px; border: 5px solod #bbb9b9" />
        </div>
    </div>

    
</form>

@section Scripts {
    @{

    <partial name="_ValidationScriptsPartial" />
    }
    <script>
        function ValidateInput() {
            if(document.getElementById("uploadBox").value == ""){
                Swal.fire({
                  icon: 'error',
                  title: 'Oops...',
                  text: 'Please upload an Image'
                });
                return false;
            }
            return true;
        }
    </script>
}

